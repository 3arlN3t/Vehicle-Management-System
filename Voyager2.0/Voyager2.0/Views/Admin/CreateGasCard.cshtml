@model TransportationDB.Admin_Create_GasCard

@{
    ViewBag.Title = "AddGasCard";
}

<h2>Add Gas Card</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @*<h4>Create Gas Card</h4>*@

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.GasCardName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("Gas Card Name: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GasCardName, new { htmlAttributes = new { @maxlength="60", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GasCardName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.GasCardNum, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("16-Digit Num: ", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.GasCardNum, new { htmlAttributes = new { @maxlength = "16", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GasCardNum, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.GasCardPin, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("Pin: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GasCardPin, new { htmlAttributes = new { @maxlength = "4", @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GasCardPin, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.StatusName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            @Html.Label("Status: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StatusName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.StatusName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
