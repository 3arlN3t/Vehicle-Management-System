{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SignOut</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SignOutId)
        @Html.HiddenFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.VehicleId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KeyId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.KeyId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GasCardId, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.GasCardId, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CheckOutTime)
        @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.User.BannerId, "BannerId", htmlAttributes: new { @class = "control-label col-md-2" })
