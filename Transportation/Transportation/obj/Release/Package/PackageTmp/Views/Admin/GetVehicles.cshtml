@model IEnumerable<Transportation.Vehicle>

@{
    ViewBag.Title = "GetVehicles";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VehiclePlate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Campus.CampusCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleStatus.StatusCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.VehiclePlate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Campus.CampusCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleStatus.StatusCode)
        </td>
        <td>
            <a class="btn btn-primary" onclick="location.href='@Url.Action("EditVehicle", "Edit", new { id = item.VehicleId })'">Edit</a>
        </td>
    </tr>
}

</table>
