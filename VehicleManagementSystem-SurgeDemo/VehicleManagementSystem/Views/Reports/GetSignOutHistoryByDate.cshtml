@model TransportationDB.Transportation_ViewAll

@{
    ViewBag.Title = "GetSignOutHistoryByDate";
    ViewBag.css = "../Content/Reports.css";
}

<h2>Sign Out History By Date</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="center">
        <div class="form-group row">
            <label for="Check Out Time" class="col-2 col-form-label">Check Out Time: </label>
            <div class="col-10">
                @Html.TextBoxFor(model => model.CheckOutTime, new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label for="Check In Time" class="col-2 col-form-label">Check In Time: </label>
            <div class="col-10">
                @Html.TextBoxFor(model => model.CheckInTime, new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(model => model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-info" />
            </div>
        </div>

    </div>
}